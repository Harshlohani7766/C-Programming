#include<stdio.h>
#include<conio.h>
void main()
{
int a,b,c,opt;
float d;
clrscr();
printf("Enter two numbers");
scanf("%d%d",&a,&b);
printf("n main menu");
printf("\n Press 1 for addition");
printf("\n Press 2 for subtraction");
printf("\n Press 3 for multiplication");
printf("\n Press 4 for division");
printf("\n optional");
scanf("%d",&opt);
switch(opt)
{
case 1:c=a+b;
printf("\n addition=%d",c);
break;
case 2:c=a-b;
printf("\n subtraction=%d",c);
break;
case 3:c=a*b;
printf("\n multiplication=%d",c);
break;
case 4:d=(float)a/b;
printf("\n division=%f",d);
break;
default:printf("\n wrong value");
break;
}
getch();
}
